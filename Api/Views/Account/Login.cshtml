@model LoginRequest

@{
    ViewData["Title"] = "Вход";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Вход</title>
</head>
<body>
    <a asp-action=@nameof(AccountController.Register)>Зарегистрироваться</a><br><br>    
    <h4>Вход в систему</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action=@nameof(AccountController.Login)>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="71234567890" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Вход" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>
